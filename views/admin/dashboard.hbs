<section class="intro">
    <div class="bg-image h-100" style="background-color: #6095F0;">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="card shadow-2-strong" style="background-color: #f5f7fa;">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-borderless mb-0">
                                        <thead>
                                            <tr>
                                                <th scope="col">
                                                    Id
                                                </th>
                                                <th scope="col">First Name</th>
                                                <th scope="col">Last Name</th>
                                                <th scope="col">Email</th>
                                                {{!-- <th scope="col">Close</th> --}}
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#if allusers}}
                                            {{#each allusers }}
                                            <tr>
                                                <th scope="row">{{_id}}</th>
                                                <td>{{firstname}}</td>
                                                <td>{{lastname}}</td>
                                                <td>{{email}}</td>
                                                {{!-- <td>
                                                    <button type="button" class="btn btn-primary btn-sm px-2">
                                                        <i class="fa fa-pen-to-square"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-danger btn-sm px-2">
                                                        <i class="fa fa-trash"></i>
                                                    </button>

                                                </td> --}}
                                            <td>
                                                <a class="btn btn-primary btn-sm px-2" href="/admin/edit/{{_id}}"><i class="fa fa-pen-to-square"></i></a>
                                                <a class="btn btn-danger btn-sm px-2" href="/admin/delete/{{_id}}"><i class="fa fa-trash"></i></a>

                                            </td>
                                                
                                            </tr>
                                            {{/each}}
                                            {{/if}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>