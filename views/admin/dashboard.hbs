<section class="intro">
    <div class="bg-image h-100" style="background-color: #322f2f;">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row">
                    <h2 class="col-3 mx-auto text-light">User Details</h2>
                </div>
                <div class="row justify-content-end mb-3">
                    <a href="/admin/adduser" class="btn btn-success col-2 me-3">
                        <i class="fa fa-user-plus"></i>
                        Add User
                    </a>
                </div>
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="card shadow-2-strong" style="background-color: #f5f7fa;">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="usersTable" class="table table-borderless mb-0">
                                        <thead>
                                            <tr>
                                                <th scope="col">
                                                    Id
                                                </th>
                                                <th scope="col">First Name</th>
                                                <th scope="col">Last Name</th>
                                                <th scope="col">Email</th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#if allusers}}
                                            {{#each allusers }}
                                            <tr>
                                                <th scope="row" class="nr">{{_id}}</th>
                                                <td>{{firstname}}</td>
                                                <td>{{lastname}}</td>
                                                <td>{{email}}</td>

                                                <td>
                                                    <a class="btn btn-primary btn-sm px-2"
                                                        href="/admin/edit/{{_id}}"><i class="fa fa-pen-to-square"></i>
                                                    </a>
                                                    <a class="btn btn-danger btn-sm px-2"
                                                        href="/admin/delete/{{_id}}"><i class="fa fa-trash"></i></a>
                                                </td>

                                            </tr>
                                            {{/each}}
                                            {{/if}}
                                        </tbody>
                                    </table>
                                    <script>
                                        $(document).ready(function () {
                                            $('#usersTable').DataTable();
                                        });
                                    </script>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>